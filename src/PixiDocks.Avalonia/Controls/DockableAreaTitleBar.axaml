<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:PixiDocks.Avalonia.Controls">
    <Design.PreviewWith>
        <controls:DockableAreaStripItem />
    </Design.PreviewWith>

    <ControlTheme TargetType="controls:DockableAreaStripItem" x:Key="{x:Type controls:DockableAreaStripItem}">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border>
                    <Border Padding="2.5" Background="{DynamicResource ThemeDockAccentBrush}" Name="PART_GrabBorder">
                        <DockPanel LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left" Foreground="{DynamicResource ThemeForegroundBrush}"
                                       Text="{Binding Dockable.Title, FallbackValue=TITLE,
                                       RelativeSource={RelativeSource TemplatedParent}}"/>
                        </DockPanel>
                    </Border>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
