<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:PixiDocks.Avalonia.Controls">
    <Design.PreviewWith>
        <controls:HostWindow />
    </Design.PreviewWith>

    <ControlTheme TargetType="controls:HostWindow" x:Key="{x:Type controls:HostWindow}">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel Background="{DynamicResource WindowBackgroundBrush}">
                    <VisualLayerManager>
                        <VisualLayerManager.ChromeOverlayLayer>
                            <!--<HostWindowTitleBar Name="PART_TitleBar" />-->
                        </VisualLayerManager.ChromeOverlayLayer>
                        <ContentPresenter Name="PART_ContentPresenter"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </VisualLayerManager>
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
